{
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "strict": true,
    "noEmit": true,
    "stripInternal": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true
  }
}
